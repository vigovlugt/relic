{
    "name": "@relic/sqlite-wasm",
    "version": "0.0.1",
    "description": "SQLite-wasm opfs sah-pool interface",
    "author": "Vigo Vlugt",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vigovlugt/relic.git",
        "directory": "packages/sqlite-wasm"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./worker": {
            "import": "./dist/worker.mjs",
            "require": "./dist/worker.js",
            "default": "./dist/worker.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "pnpm build --watch",
        "lint": "eslint --cache --ext \".js,.ts,.tsx\" --ignore-path ../../.gitignore src",
        "ts-watch": "tsc --watch"
    },
    "files": [
        "dist",
        "src",
        "README.md",
        "package.json"
    ],
    "peerDependencies": {
        "@sqlite.org/sqlite-wasm": "3.45.3-build1"
    },
    "devDependencies": {
        "@sqlite.org/sqlite-wasm": "3.45.3-build1",
        "eslint": "^9.2.0",
        "tsup": "^8.0.2"
    },
    "publishConfig": {
        "access": "public"
    }
