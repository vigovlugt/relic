{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@relic/core": ["../../packages/core/src"],
            "@relic/client": ["../../packages/client/src"],
            "@relic/server": ["../../packages/server/src"],
            "@relic/sqlite-wasm": ["../../packages/sqlite-wasm/src"],
            "@relic/adapter-drizzle": ["../../packages/adapter-drizzle/src"]
        }
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
