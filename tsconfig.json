{
    "compilerOptions": {
        "module": "esnext",
        "lib": ["esnext", "dom", "dom.iterable"],
        "target": "es2020",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitOverride": true,
        "baseUrl": ".",
        "paths": {
            "@relic/core": ["packages/core/src"],
            "@relic/client": ["packages/client/src"],
            "@relic/server": ["packages/server/src"],
            "@relic/sqlite-wasm": ["packages/sqlite-wasm/src"],
            "@relic/adapter-drizzle": ["packages/adapter-drizzle/src"]
        }
    },
    "include": ["packages", "examples"]
}
